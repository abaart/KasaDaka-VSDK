{% extends "base.xml" %}
{% block content %}

<form id="record_form">

<record name="recording" beep="true" maxtime="60s"
  finalsilence="4s" dtmfterm="true" {% if record.barge_in %} bargein="true" {% endif %} >
<prompt>
<audio src="{{ final_voice_label }}"/>
</prompt>
</record>


{% if record.repeat_recording_to_caller %}
    <block>
        <prompt>
        <audio src="{{ repeat_voice_label }}"/> <audio expr="recording"/>
        </prompt>
    </block>
{% endif %}


{%  if record.ask_confirmation %}

    <field name="confirm">
        <prompt>
        <audio src="{{ask_confirmation_voice_label}}"/>
        </prompt>
        <grammar xml:lang="en-US" root = "MYRULE" mode="dtmf">
              <rule id="MYRULE" scope = "public">
                <one-of>
                    <item>1</item>
                    <item>2</item>
                </one-of>
               </rule>
             </grammar>
          <filled>
              <if cond="confirm == '1'">
                  <prompt>
                      <audio src="{{final_voice_label}}"/>
                  </prompt>
                  <assign name="redirect" expr="'{{ redirect_url }}'"/>
                    <submit next="{{ url }}" enctype="multipart/form-data" method="post" namelist="redirect recording"/>
           </if>
              <if cond="confirm == '2'">
            <goto next="#record_form"/>
           </if>
          </filled>
 </field>

{% endif %}


<block>
    <prompt>
        <audio src="{{final_voice_label}}"/>
        <goto next="{{ redirect_url }}" />
    </prompt>
</block>




</form>

{% endblock %}